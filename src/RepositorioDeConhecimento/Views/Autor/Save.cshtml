@model AutorDTO

@{
    string acao = ViewContext.RouteData.Values["id"] != null ? "Editar" : "Criar";
    ViewData["Title"] = acao + " Autor";
}

<div class="container-sm mt-4">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-4">
            <h1>
                @acao Autor
            </h1>
        </div>

        <div class="col-lg-4 offset-lg-4">
            <a class="btn btn-lg btn-danger" asp-action="Index">Cancelar</a>
        </div>

    </div>

    <hr />

    <!-- Div para receber os erros de ModeState.AddModelError -->
    <div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3">

    </div>

    <div class="mt-3 row">
        <form method="post" asp-controller="Autor" asp-action="Save" class="row g-3">
            <input hidden asp-for="Id" />

            <div class="col-lg-12 form-group">
                <label asp-for="Nome" class="form-label">Nome:</label>
                <input asp-for="Nome" class="form-control" autofocus />
                <span asp-validation-for="Nome" class="alert-danger"></span>
            </div>

            <div class="col-lg-5 form-group">
                <label asp-for="Email" class="form-label">Descrição:</label>
                <input asp-for="Email" class="form-control" placeholder="mail@mail.com" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" />
                <span asp-validation-for="Email" class="alert-danger"></span>
            </div>

            <div class="col-lg-5 form-group">
                <label asp-for="Telefone" class="form-label">Descrição:</label>
                <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" pattern="\(\d{2}\) \d{4,5}-\d{4}" />
                <span asp-validation-for="Telefone" class="alert-danger"></span>
            </div>

            <div class="col-lg-2 form-group">
                <label asp-for="Sigla" class="form-label">Descrição:</label>
                <input asp-for="Sigla" class="form-control" maxlength="3" placeholder="Máx. 3 caracteres" />
                <span asp-validation-for="Sigla" class="alert-danger"></span>
            </div>

