@model LoginUsuarioViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-sm mt-4">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-3">
            <h1>
                Login
            </h1>

        </div>

        <hr />

    </div>
</div>

<div class="container mt-4 d-flex justify-content-center">
    <form method="POST" asp-controller="Usuario" asp-action="Login" class="col-md-6">
        <!-- Email input -->
        <div class="row">
            <div class="form-outline mb-4 col-md-12">
                <label class="form-label" asp-for="Email">E-mail: </label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <!-- Password input -->
        <div class="row">
            <div class="form-outline mb-4 col-md-12">
                <label class="form-label" asp-for="Senha">Senha: </label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha"></span>
            </div>
        </div>

        <div class="row">
            <div class="mb-4">
                <div class="col d-flex justify-content-between">
                    <!-- Checkbox -->
                    <div class="form-check col-md-3">
                        <input class="form-check-input" type="checkbox" asp-for="LembrarMe" />
                        <label class="form-check-label" asp-for="LembrarMe"> Manter logado ? </label>
                    </div>
                    <a asp-controller="Usuario" asp-action="RecuperaSenha">Esqueceu a senha ?</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-outline mb-4 col-md-12">
                Ainda não tem uma conta ? <a asp-controller="Usuario" asp-action="Registrar">Registre-se.</a>
            </div>
        </div>

        <!-- Submit button -->
        <button type="button" class="btn btn-lg btn-primary mb-4">Login</button>

