@model ConhecimentoDTO

@{ 
    string nomeAutor = Model.Autor != null ? Model.Autor.Nome : "Autor não informado";
}

<div class="container mt-4">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-4">
            <h1>
                Apagar Conhecimento
            </h1>
        </div>

        <div class="col-lg-4 offset-lg-4">
            <a class="btn btn-lg btn-danger" asp-action="Index">Cancelar</a>
        </div>

    </div>

    <hr />

    <!-- Div para receber os erros de ModeState.AddModelError -->
    <div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3">

    </div>

    <div class="mt-3 row">
        <form method="post" asp-controller="Conhecimento" asp-action="Delete" class="row g-3">
            <input hidden asp-for="Id" />

            <div class="col-lg-12">
                <h3>Tem certeza que deseja <span class="text-danger fw-bold">DELETAR</span> o conhecimento <q><u><span class="text-danger">@Model.Titulo do Autor @nomeAutor</span></u></q>?</h3>
            </div>

            <div class="col-lg-2">
                <button type="submit" class="btn btn-lg btn-danger">
                    Deletar
                </button>
            </div>
        </form>
    </div>

</div>
