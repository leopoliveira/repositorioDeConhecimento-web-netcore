@model CategoriaDTO

@{
    ViewData["Title"] = "Criar Categoria";
}

<div class="container-sm mt-4">

    <div class="row g-lg-3 text-center">
        <div class="col-lg-4">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>

        <div class="col-lg-4 offset-lg-4">
            <a class="btn btn-lg btn-danger" asp-action="Index">Cancelar</a>
        </div>

    </div>

    <hr />

    <!-- Div para receber os erros de ModeState.AddModelError -->
    <div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3">

    </div>

    <div class="mt-3 row">
        <form method="post" asp-controller="Categoria" asp-action="Save" class="row g-3">
            <input hidden asp-for="IdUsuario" />

            <div class="col-lg-12 form-group">
                <label asp-for="Nome" class="form-label">Nome:</label>
                <input asp-for="Nome" class="form-control" autofocus />
                <span asp-validation-for="Nome" class="alert-danger"></span>
            </div>

            <div class="col-lg-12 form-group">
                <label asp-for="Descricao" class="form-label">Descrição:</label>
                <textarea class="form-control" rows="5" asp-for="Descricao"></textarea>
                <span asp-validation-for="Descricao" class="alert-danger"></span>
            </div>

